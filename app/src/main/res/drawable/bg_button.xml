<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@android:color/holo_red_light" />
            <stroke
                android:width="5dp"
                android:color="@android:color/transparent" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <margin
                android:left="50dp"
                android:top="50dp"
                android:right="50dp"
                android:bottom="50dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@android:color/holo_red_light"
                android:endColor="@android:color/holo_red_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@android:color/holo_red_light" />
            <corners
                android:radius="2dp" />
            <margin
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>